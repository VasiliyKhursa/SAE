<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnStartPending"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:onClick="onclick"
        android:text="@string/startPending"
        android:textSize="10sp" >

    </Button>
    
    <Button
        android:id="@+id/btnStartRunning"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:onClick="onclick"
        android:text="@string/startRunning"
        android:textSize="10sp" >

    </Button>
    
    <Button
        android:id="@+id/btnStartCancell"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:onClick="onclick"
        android:text="@string/startCancell"
        android:textSize="10sp" >

    </Button>

    <Button
        android:id="@+id/btnStatus"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:onClick="onclick"
        android:text="@string/status"
        android:textSize="10sp" >

    </Button>
    
    <Button
        android:id="@+id/btnStatus2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:onClick="onclick"
        android:text="Status 2"
        android:textSize="10sp" >

    </Button>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" >
    </TextView>

</LinearLayout>